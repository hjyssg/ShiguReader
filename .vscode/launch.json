    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/src/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch via NPM",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
            "run",
            "dev"
        ],
        "port": 9229
    },
        {
            "type": "node",
            "request": "launch",
            "name": "script-generator",
            "program": "${workspaceFolder}\\src\\tools\\script-generator.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server",
            "program": "${workspaceFolder}\\src\\server\\index.js",
            "args": [
                "--dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "production server",
            "program": "${workspaceFolder}\\src\\server\\index.js",
            "args": [
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "server on mac",
            "program": "${workspaceFolder}/src/server/index.js",
            "args": [
                "--dev"
            ]
        }
    ]
}