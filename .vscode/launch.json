  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/src/test"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "script-generator",
      "program": "${workspaceFolder}\\src\\tools\\script-generator.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "main server",
      "program": "${workspaceFolder}\\src\\server\\index.js",
      "args": [
        // "--port" ,"5000",
      ]
    },
    {
        "type": "node",
        "request": "launch",
        "name": "main server [skip scan]",
        "program": "${workspaceFolder}\\src\\server\\index.js",
        "args": [
           "--skip-scan"
        ]
      },
    {
      "type": "node",
      "request": "launch",
      "name": "sub server",
      "program": "${workspaceFolder}\\src\\server\\_sub_server.js",
      "args": []
    }
  ]
}
